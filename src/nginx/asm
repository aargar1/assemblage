map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
}

server {
	server_name assemblage.cc www.assemblage.cc;

	location / {
		include uwsgi_params;
		uwsgi_pass unix:/tmp/asm.sock;
	}

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/assemblage.cc/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/assemblage.cc/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

  location /jupyter/ {
    # NOTE important to also set base url of jupyterhub to /jupyter in its config
    proxy_pass http://127.0.0.1:8000;

    proxy_redirect   off;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # websocket headers
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

  }
}
server {
    if ($host = www.assemblage.cc) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = assemblage.cc) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80;
	server_name assemblage.cc www.assemblage.cc;
    return 404; # managed by Certbot

}
